                preload="auto"
                width= "800"
                data-setup='{"fluid": true}'>
                <source
                  src= "<%= @video.url %>"
                  type="application/x-mpegURL">
              </video>
              <p>
                <%= link_to "<i class='fas fa-undo-alt'></i> Voltar".html_safe, videos_path, class: 'btn btn-secondary' %>

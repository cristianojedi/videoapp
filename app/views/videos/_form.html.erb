<%= form_with(model: video, local: true, html: { class: 'needs-validation' }) do |form| %>

  <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, autofocus: true, placeholder: 'Nome', class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :url %>
    <div class="input-group mb-3">
      <%= form.text_field :url, placeholder: 'Url', class: 'form-control', required: true,  aria_describedby: 'basic-addon2' %>
      <div class="input-group-append">
        <span class="input-group-text" id="basic-addon2">.m3u8</span>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= form.button '<i class="fas fa-save"></i> Salvar'.html_safe, :class => "btn btn-primary" %>
  </div>
  
<% end %>

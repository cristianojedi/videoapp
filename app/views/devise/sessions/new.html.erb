<div class="login-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h2 class="text-center">Login</h2>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, placeholder: 'E-mail', class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, placeholder: 'Senha', class: 'form-control', required: true %>
    </div>
    
    <div class="form-group text-center">
      <%= f.button '<i class="fas fa-sign-in-alt"></i> Entrar'.html_safe, class: 'btn btn-primary' %>
    </div>

  <% end %>
</div>